<%= column_chart Rating.group(:beer_id).average(:crisp) %>
<div class="text-center">Average Fruitiness</div>
<%= column_chart Rating.group(:beer_id).average(:fruity) %>
<div class="text-center">Average Funkiness</div>
<%= column_chart Rating.group(:beer_id).average(:funky) %>
<div class="text-center">Average Roastiness</div>
<%= column_chart Rating.group(:beer_id).average(:roasted) %>
<div class="text-center">Average Smokiness</div>
<%= column_chart Rating.group(:beer_id).average(:smoky) %>
