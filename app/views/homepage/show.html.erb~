<br>

    <script type="text/javascript">
     //my beautiful d3 code will go here!
     // giving it a go
     var dataset=[10,15];
     // set width and height
     var w = 500;
     var h = 100;
     // create the SVG element
     var svg = d3.select("body")
                 .append("svg")
                 .attr("width", w)
                 .attr("height", h);
     svg.selectAll("circle")
        .data(dataset)
        .enter()
        .append("circle")
        .attr("cx", function(d) {
           return d[0];
           })
        .attr("cy", function(d) {
           return d[1];
           })
        .attr("r", 5);
    </script>


