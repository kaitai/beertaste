    <script type="text/javascript">
     //my beautiful d3 code will go here!
     // giving it a go
     // try to read in json
     d3.json("ratings.json", function(error, json) {
       console.log(json);
     // set width and height
     var w = 500;
     var h = 100;
     if (error) return console.warn(error);
     data = json;
     //var dataset = [[10,12],[30,40],[77,77]];
//     var jsonCircles = [{"x_axis": 30,
//                         "y_axis": 30,
//                         "radius": 20,
//                         "color" : "green"
//                         }, {
//                         "x_axis": 40,
//                         "y_axis": 40,
//                         "radius": 25,
//                         "color" : "purple"
//                         }];
     // create the SVG element
     var svg = d3.select("body")
                 .append("svg")
                 .attr("width", w)
                 .attr("height", h);
     svg.selectAll("circle")
        .data(data)
        .enter()
        .append("circle")
        .attr("cx", function(d) {
           return d.malty*10;
           })
        .attr("cy", function(d) {
           return h-d.hoppy*10;
           })
        .attr("r", function(d) {
           return d.crisp;
           })
//        .attr("fill", function(d) {
//           return d.color;
//           });
     });

    </script>


